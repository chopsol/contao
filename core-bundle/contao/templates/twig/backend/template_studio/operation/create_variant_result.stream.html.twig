{# Show a message #}
{% embed "@Contao/backend/component/message/add_message.stream.html.twig" with {success: true} %}
    {% trans_default_domain "contao_template_studio" %}

    {% block content %}
        {% set identifier_token -%}
            <span class="token">{{ identifier }}</span>
        {%- endset %}
        {{ 'message.create_variant.success'|trans([identifier_token])|raw }}
    {% endblock %}
{% endembed %}

