{# Show a message #}
{% embed "@Contao/backend/component/message/add_message.stream.html.twig" with {success: false} %}
    {% trans_default_domain "contao_template_studio" %}

    {% block content %}
        {% set block_token -%}
            <span class="token">{{ block }}</span>
        {%- endset %}
        {{ 'message.open_block_info.error'|trans([block_token])|raw }}
    {% endblock %}
{% endembed %}
